@startuml use_case_general
!define ABSTRACT abstract
title General Use Case Diagram - CI/CD Build Risk Evaluation System

left to right direction

actor "Authenticated User" as AU
actor "System Administrator" as Admin

rectangle "CI/CD Build Risk Evaluation System" {
    usecase "View Build Dashboard" as UC1
    usecase "Upload Dataset" as UC2
    usecase "Create Dataset Version" as UC3
    usecase "Download Enriched Dataset" as UC4
    usecase "Explore Features" as UC5
    
    usecase "Register Repository" as UC6
    usecase "Configure System Settings" as UC7
    usecase "Monitor Pipeline Execution" as UC8
    usecase "Manage Users & Access" as UC9
}

' Authenticated User relationships
AU --> UC1 : views
AU --> UC2 : uploads
AU --> UC3 : creates
AU --> UC4 : downloads
AU --> UC5 : explores

' System Administrator relationships
Admin --> UC1
Admin --> UC2
Admin --> UC3
Admin --> UC4
Admin --> UC5
Admin --> UC6 : registers
Admin --> UC7 : configures
Admin --> UC8 : monitors
Admin --> UC9 : manages

' Inheritance (Admin extends Authenticated User)
AU <|-- Admin : extends

' Use case relationships
UC2 --> UC3 : <<include>>
UC3 --> UC5 : <<include>>
UC3 --> UC8 : <<include>>

@enduml
