# Database configuration
MONGODB_URI=mongodb://username:password@localhost:27017
MONGODB_DB_NAME=buildguard

# GitHub (OAuth & App)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/github/callback
FRONTEND_BASE_URL=http://localhost:3000
GITHUB_WEBHOOK_SECRET=choose-a-shared-secret
GITHUB_TOKENS=[]
GITHUB_SCOPES=["read:user","user:email","repo","read:org","workflow"]
GITHUB_APP_ID=your-github-app-id
GITHUB_APP_PRIVATE_KEY=/path/to/your/github-app-private-key.pem
# Application
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production

# ML Model (disabled) - remove or set if re-enabling model integration in future
# MODEl_PATH=./app/ml/models/bayesian_cnn.pth

# Celery / RabbitMQ
CELERY_BROKER_URL=amqp://myuser:mypass@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/0

REDIS_URL=redis://localhost:6379/0

# Repository artifacts
REPO_MIRROR_ROOT=./repo-mirrors
ARTIFACTS_ROOT=./artifacts
